<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

        <TextView
        style="@style/QuestionnaireCaptions"
            android:layout_margin="15dp"
        android:id="@+id/reportingArea"
        android:layout_row="0"
        android:text="@string/wait"
        android:padding="10dp" />
    <Spinner
        android:id="@+id/reportingAreaSelection"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_margin="15dp"
        android:id="@+id/incidentDescription"
        android:layout_row="2"
        android:text="@string/wait"
        android:padding="10dp" />
    <EditText
        android:id="@+id/incidentDescriptionEdit"
        android:layout_row="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:lines="3"
        android:layout_gravity="center_horizontal" />

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Risikobewertung"
        android:id="@+id/textView2"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eintrittswahrscheinlichkeit"
        android:id="@+id/textView3" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoch"
            android:id="@+id/radioButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mittel"
            android:id="@+id/radioButton2"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niedrig"
            android:id="@+id/radioButton3"
            android:checked="false" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entdeckungswahrscheinlichkeit"
        android:id="@+id/textView4" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoch"
            android:id="@+id/radioButton4"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mittel"
            android:id="@+id/radioButton5"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niedrig"
            android:id="@+id/radioButton6"
            android:checked="false" />

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bedeutung"
        android:id="@+id/textView10" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoch"
            android:id="@+id/radioButton7"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mittel"
            android:id="@+id/radioButton8"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="niedrig"
            android:id="@+id/radioButton9"
            android:checked="false" />
    </TableRow>

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="15dp"
        android:text="Wann ist das Ereignis passiert?"
        android:padding="10dp"
        android:id="@+id/textView11" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum"
            android:id="@+id/textView12" />

        <EditText
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_weight="1"
            android:lines="3"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Uhrzeit"
            android:id="@+id/textView13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_weight="1"
            android:lines="3"/>
    </TableRow>

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:text="Wo ist das Ereignis passiert?"
        android:id="@+id/textView14" />
        <EditText
            android:id="@+id/EreignisDescriptionEdit"
            android:layout_width="370px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:lines="3"/>
    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:text="Was wurde als Sofortmaßnahme eingeleitet?"
        android:id="@+id/textView15" />
    <EditText
        android:id="@+id/MassnahmeDescriptionEdit"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="3"/>

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:text="Folgen (z.B.: Personenschäden)"
        android:id="@+id/textView16" />
    <EditText
        android:id="@+id/FolgenDescriptionEdit"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="3"/>

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Was hat Ihrer Meinung nach zu dem Ereignis geführt?"
        android:id="@+id/textView17" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Personenbezogene Faktoren (z.B. Müdigkeit, Motivation, Ausbildung)"
        android:id="@+id/textView18" />
    <EditText
        android:id="@+id/MeinungDescriptionEditOne"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Organisatorische Faktoren (z.B. Abläufe, Standards, Personalausstattung)"
        android:id="@+id/textView19" />
    <EditText
        android:id="@+id/MeinungDescriptionEdittwo"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weitere Anmerkungen"
        android:id="@+id/textView20" />
    <EditText
        android:id="@+id/MeinungDescriptionEditthree"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="3"/>

    <TextView
        style="@style/QuestionnaireCaptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dp"
        android:text="Bilder/Dateien anhängen"
        android:id="@+id/textView21" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Datei(en)auswählen"
        android:layout_margin="15dp"
        android:id="@+id/fileupload"
        android:textColor="#ADD8E6"/>
    <EditText
        android:id="@+id/datadescription"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:lines="1"/>
    <EditText
        android:id="@+id/dataavailability"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        style="@style/QuestionnaireCaptions"
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="kontaktdaten" />

    <EditText
        android:id="@+id/MeinungDescriptionEditthree"
        android:layout_width="370px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="1"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:text="Abschicken"
        android:textColorHighlight="#000000"
        android:background="#FFFF00"
        android:id="@+id/send"
        android:textColor="#000000"/>
</LinearLayout>
</ScrollView>