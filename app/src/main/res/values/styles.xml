<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="QuestionnaireLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="QuestionnaireCaptions" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/rounded_corners_textview</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="QuestionnaireCaptionsLevel2" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/rounded_corners_textview</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="QuestionnaireEdits" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginStart">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginLeft">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginEnd">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginRight">@dimen/leftMarginQuestionnaire</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="QuestionnaireViews" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">#9C9C9C</item>
        <item name="android:layout_marginStart">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginLeft">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginEnd">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginRight">@dimen/leftMarginQuestionnaire</item>
        <item name="android:scrollHorizontally">false</item>
    </style>


    <style name="QuestionnaireRadioButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginStart">@dimen/leftMarginQuestionnaire</item>
        <item name="android:layout_marginLeft">@dimen/leftMarginQuestionnaire</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
